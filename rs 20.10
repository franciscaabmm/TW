  color: white;
  padding: 20px;
}
    

    @keyframes titleAnimation {
      0% {
        color: #ff4d4f;
        font-family: 'Courier New', Courier, monospace;
      }
      25% {
        color: #ffa940;
        font-family: 'Courier New', Courier, monospace;
      }
      50% {
        color: #52c41a;
        font-family: 'Courier New', Courier, monospace;
      }
      75% {
        color: #1890ff;
        font-family: 'Courier New', Courier, monospace;
      }
      100% {
        color: #ff4d4f;
        font-family: 'Courier New', Courier, monospace;
      }
    }

    .animated-title {
      animation: titleAnimation 10s infinite;
      font-size: 48px;
      text-align: center;
      padding: 20px;
      background-color: rgba(0, 0, 0, 0.5);
      border: 2px solid transparent;
      border-image: linear-gradient(45deg, #ff4d4f, #ffa940, #52c41a, #1890ff) 1;
      border-radius: 12px;
      color:white;
      margin:0;
}


    .title-container {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      white-space: nowrap;
    }
    @keyframes flyIn {
      from {
        transform: translateX(-100px);
        opacity: 0;
      }
      to {
        transform: translateX(0);
        opacity: 1;
      }
    }

    .avatar {
      width: 180px;
      height: 180px;
      border-radius: 50%;
      object-fit: cover;
      animation: flyIn 2s ease-out forwards;
      flex-shrink:0;
    }
     .section {
      width: 30%;
      margin: 20px;
    }

    .rules {
      font-family: 'Courier New', Courier, monospace;
    }

   
     .comando-box {
      border: 2px solid white;
      border-radius: 10px;
      padding: 20px;
      max-width: 350px;
      background-color: rgba(0, 0, 0, 0.3);
      color: white;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
      margin-top: 20px;
    }
    .comando-box h2 {
      font-size: 1.8rem;
      margin-bottom: 20px;
      border-bottom: 2px solid rgba(255, 255, 255, 0.3);
      padding-bottom: 10px;
    }

    .comando-box ul {
      list-style: none;
      padding: 0;
    }

    .comando-box li {
      background-color: rgba(255, 255, 255, 0.1);
      padding: 10px;
      margin-bottom: 10px;
      border-radius: 5px;
      transition: background 0.3s;
      cursor: pointer;
    }

    .comando-box li:hover {
      background-color: rgba(255, 255, 255, 0.25);
    }
      .game-panel {
        position: absolute; 
        top: 73%; left: 50.2%; 
        transform: translate(-50%, -50%);
         margin: 30px auto;
         width: 590px;
         height: 500px;
         background: rgba(255, 255, 255, 0.1); 
         backdrop-filter: blur(10px); 
         border: 2px solid white;
         box-shadow: 0 8px 32px 0 rgba(32, 39, 138, 0.37);
         border-radius: 15px;
         padding: 30px;
         text-align: center;
         color: white;
         font-family: 'Courier New', Courier, monospace;
         z-index: 900;
         animation: fadeIn 2s ease forwards;
      }

      .leaderboard {
      border: 2px solid white;
      border-radius: 10px;
      padding: 20px;
      max-width: 350px;
      background-color: rgba(0, 0, 0, 0.3);
      color: white;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
      margin-top: 20px;
      
    }

    .leaderboard h1 {
      font-size: 1.8rem;
      margin-bottom: 20px;
      border-bottom: 2px solid rgba(255, 255, 255, 0.3);
      padding-bottom: 10px;
    }

    .leaderboard ol {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .leaderboard li {
      background: rgba(255, 255, 255, 0.15);
      margin: 10px 0;
      padding: 12px 20px;
      border-radius: 12px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-weight: 500;
      transition: transform 0.2s ease;
    }

    .leaderboard li:hover {
      transform: scale(1.05);
      background: rgba(255, 255, 255, 0.25);
    }

    .rank {
      font-size: 1.2rem;
      font-weight: bold;
      color: #ffd700;
      width: 30px;
      text-align: left;
    }

    .name {
      flex-grow: 1;
      text-align: left;
      padding-left: 10px;
    }

    .score {
      font-weight: bold;
    }

    .leaderboard li:nth-child(1) .rank { color: gold; }
    .leaderboard li:nth-child(2) .rank { color: silver; }
    .leaderboard li:nth-child(3) .rank { color: #cd7f32; }
 
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translate(-50%, -60%);
  }
  to {
    opacity: 1;
    transform: translate(-50%, -50%);
  }
}
  </style>
</head>


